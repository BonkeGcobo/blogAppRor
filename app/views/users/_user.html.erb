 <div id="<%=user.id=%>" class="user" style="display:flex; align-items:center; gap:1.2rem; margin-top:0.5rem;  cursor:pointer; border: 1px solid #000">

   <img src="<%= user.photo %>" alt="user-photo" width="100" height="100">

   <div class="user-info" style="border:1px solid #000; padding:1rem">
      
      <h3><%= user.name %></h3>
      <p>Number of posts:<%= user.post_counter %></p>
   </div>  
</div>

<script>
       clickedUser = document.querySelectorAll(".user")

      clickedUser.forEach((user)=>{
        user.addEventListener('click', (e)=>{
            const rootLocation = window.location.origin; 
            const newLocation = `${rootLocation}/users/${e.target.id}`
            window.location.href= newLocation
        })
      })
</script>